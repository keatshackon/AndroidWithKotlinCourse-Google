<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/overViewFragment">


    <fragment
        android:id="@+id/overViewFragment"
        android:name="com.keatssalazar.marsapp.overview.OverViewFragment"
        android:label="OverViewFragment"
        tools:layout="@layout/over_view_fragment">
        <action
            android:id="@+id/action_overViewFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.keatssalazar.marsapp.details.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/details_fragment"/>

</navigation>